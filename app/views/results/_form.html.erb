<%= form_for @result, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :user_id_str, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_id_str, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :exam_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :exam_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :question_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :question_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :user_selection, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :user_selection, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :answer, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :answer, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :used_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :used_time, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                results_path, :class => 'btn' %>
  </div>
<% end %>
